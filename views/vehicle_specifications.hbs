{{! Create a table }}
<div class="container w-85">
<table id ='vehicle-specifications-table' class="table table-hover">

  {{! Header section }}
  <thead class="thead-dark">

    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}} 
        </th>
      {{/each}}
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{#each data}}
      <tr data-value={{this.SpecificationID}}>
        <td>{{this.SpecificationID}}</td> 
        <td>{{this.Make}}</td> 
        <td>{{this.Model}}</td> 
        <td>{{this.FuelType}}</td> 
        <td>{{this.BodyType}}</td> 
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

{{!-- Form to add a record to the table  --}}
<div class="container app-forms">
<h2>Add a New Vehicle Specification! </h2>
<p>To add a new vehicle specification, please enter their information below and click 'Submit'!</p>
<form id="add-vehicle-specification-form-ajax">
    <label for="input-make">Make: </label>
    <input type="text" name="input-make" id="input-make">
    
    <label for="input-model">Model: </label>
    <input type="text" name="input-model" id="input-model">

    <label for="input-fuel-type">Fuel Type: </label>
    <input type="text" name="input-fuel-type" id="input-fuel-type">

    <label for="input-body-type">Body Type: </label>
    <input type="text" name="input-body-type" id="input-body-type">

    <input type="submit">
</form>
</div>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_vehicle_specification.js"></script>


