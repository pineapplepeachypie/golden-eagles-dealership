{{! Create a table }}
<div class="container w-85">
<table id ='statuses-table' class="table table-hover">

  {{! Header section }}
  <thead class="thead-dark">

    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}}
        </th>
      {{/each}}
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{! For each row, print the status_id and status }}
    {{#each data}}
      <tr data-value={{this.StatusId}}>
        <td>{{this.StatusID}}</td>
        <td>{{this.Status}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
</div>

{{!-- Form to add a record to the table  --}}
<div class="container app-forms">
<h2>Add a New Status</h2>
<p>To add a new status, please enter their information below and click 'Submit'!</p>
<form id="add-status-form-ajax">
    <label for="input-status">Status: </label>
    <input type="text" name="input-status" id="input-status">

    <input type="submit">
</form>
</div>
